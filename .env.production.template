# TraceLens Production Environment Variables Template

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=tracelens
POSTGRES_USER=tracelens

# Redis Configuration  
REDIS_URL=redis://redis:6379

# API Security
API_KEY_SECRET=your_secure_api_key_secret_here

# External API Keys
NVD_API_KEY=your_nvd_api_key_here
OSV_API_KEY=your_osv_api_key_here

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info

# Service URLs (internal)
INGESTION_URL=http://ingestion:3001
ANALYSIS_URL=http://analysis:3003
SECURITY_URL=http://security:3004

# Public URLs (external)
NEXT_PUBLIC_API_URL=https://tracelens.yourdomain.com/api
NEXT_PUBLIC_DASHBOARD_URL=https://tracelens.yourdomain.com

# SSL Configuration (optional)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Performance Tuning
MAX_EVENTS_PER_BATCH=1000
ANALYSIS_TIMEOUT=30000
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_EVENTS=1000
RATE_LIMIT_API=100
RATE_LIMIT_WINDOW=60

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
LOG_REQUESTS=false
