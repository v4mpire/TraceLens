{
  "name": "@tracelens/security-scanner",
  "version": "0.1.0",
  "description": "CVE mapping and vulnerability analysis",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tracelens/shared": "file:../shared",
    "@tracelens/analysis-engine": "file:../analysis-engine",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@tracelens/eslint-config": "file:../../tools/eslint-config",
    "@tracelens/tsconfig": "file:../../tools/tsconfig",
    "@types/node": "^20.10.5",
    "@types/jest": "^29.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.6.2",
    "jest": "^29.0.0",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/__tests__/**"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(node-fetch)/)"
    ],
    "extensionsToTreatAsEsm": [".ts"],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  }
}
