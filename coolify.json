{
  "name": "tracelens",
  "description": "Runtime Truth Engine for Web Applications",
  "version": "1.0.0",
  "type": "docker-compose",
  "repository": "https://github.com/v4mpire/TraceLens.git",
  "branch": "main",
  "buildCommand": "npm run build",
  "dockerComposeFile": "docker/production/docker-compose-simple.yaml",
  "environmentFile": ".env.production",
  "domains": [
    {
      "domain": "tracelens.yourdomain.com",
      "port": 80
    }
  ],
  "services": {
    "web": {
      "name": "TraceLens Dashboard",
      "port": 3000,
      "healthCheck": "/"
    },
    "nginx": {
      "name": "Reverse Proxy",
      "port": 80,
      "healthCheck": "/health"
    }
  },
  "resources": {
    "cpu": "1",
    "memory": "2Gi",
    "storage": "10Gi"
  },
  "scaling": {
    "minReplicas": 1,
    "maxReplicas": 2,
    "targetCPU": 70
  },
  "monitoring": {
    "enabled": true,
    "healthChecks": true,
    "logs": true,
    "metrics": true
  }
}
